{
  "compilerOptions": {
    "module": "es6",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
